<!-- Validate quantity form -->
<script>
jQuery(document).ready(function() {
	$(function() {
		$(".js-qty__num").keypress(function(event) {
			if (event.which != 8 && event.which != 0 && (event.which < 48 || event.which > 57)) {
				return false;
			}
		});
		$(".ajaxcart__qty-num").keypress(function(event) {
			if (event.which != 8 && event.which != 0 && (event.which < 48 || event.which > 57)) {
				return false;
			}
		});
	});
});
</script>

